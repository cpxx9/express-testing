<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <%- include("partials/errors.ejs") %>
  <form action="/search" method="GET">
    <label for="searchEmail">Search by user email:</label>
    <input type="text" name="searchEmail" id="searchEmail" value="<%= locals.searchEmail ? searchEmail : '' %>">
  </form>
  <ul>
    <% if (locals.users) {%>
      <% users.forEach(user => { %>
        <li>ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %></li>
        <p><%= user.age %></p>
        <p><%= user.bio %></p>
        <a href="/<%= user.id %>/update">Update</a>
        <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
      </form>
      <% }); %>
    <% } %>
  </ul>
  <a href="/create">Create a user</a>
</body>
</html>
